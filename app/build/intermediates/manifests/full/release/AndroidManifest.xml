<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bheemesh.myapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bheemesh.myapplication.activities.SplashViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/NoActionBarFullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bheemesh.myapplication.activities.PostNews"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/home_post_news_activity_title"
            android:theme="@style/NoActionBarFullScreen" >
        </activity>
        <activity
            android:name="com.example.bheemesh.myapplication.activities.SignOnActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarFullScreen" >
        </activity>
        <activity
            android:name="com.example.bheemesh.myapplication.activities.MainViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.bheemesh.myapplication.activities.ProfileActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/home_profile_activity_title"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.bheemesh.myapplication.activities.NewsListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/home_news_list_activity_title"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.bheemesh.myapplication.activities.BaseItemDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>